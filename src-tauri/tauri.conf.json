{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Stakeholder Mapping",
  "version": "1.0.0",
  "identifier": "com.stakeholder.mapping",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Stakeholder Mapping",
        "width": 1400,
        "height": 900,
        "minWidth": 1000,
        "minHeight": 700,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "fs": {
      "scope": ["$APPDATA/**", "$HOME/**"]
    },
    "dialog": {
      "all": true
    }
  }
}

